{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@saas/*": [
                "packages/*/src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}